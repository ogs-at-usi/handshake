<section id="menu" class="col-12 col-md-4 col-lg-3">
    <header class="justify-content-between align-items-center d-flex flex-row">
        <h1>HandShake</h1>
        <img class="pfp" src="<%= img_address || 'icons/default_pfp.png' %>" alt="pfp" />
    </header>

    <nav class="align-items-center d-flex flex-row">
        <form id="search-bar" action="">
            <input type="text" placeholder="Search..." />
            <button>ðŸ”Ž</button>
        </form>
    </nav>
    <main>
        <%contacts.forEach((u)=> {
            let contactname;
            if (chat.isGroup) {
                contactname = chat.title;
            } else {
                for (let i = 0; i < 2; i++) {
                    if (chat.members[i]._id !== myuser._id) {
                        contactname = chat.members[i].name;
                    }
                }
            }%>
            <div class="contact justify-content-between d-flex flex-row align-items-center">
                <div class="col-3">
                    <img class="pfp" src="<%= img_address || 'icons/default_pfp.png' %>" alt="pfp" />
                </div>
                <div class="col-8">
                    <h3><%=contactname%></h3>
                </div>
                <div class="col-1">
                    <p class="notification badge rounded-pill text-bg-light"></p>
                </div>
            </div>
        <%});%>
    </main>
</section>